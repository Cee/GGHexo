  /*! index layout */
#container
  width 95%
  margin 0 auto
  overflow hidden
  @media mini
    width 96%
  @media tablet
    width 94%
  @media desktop
    width 82%
    
#main
  margin 1em 0 0
  line-height line-height+0.3
  @media tablet
    margin 2em 0 0
    width 73%
    float left
  section.post
    background color-section
    margin-bottom 1em
    a
      display block
      padding 0.5em
      @media mini
        padding 1em
      &:hover
        h1
          color color-theme
      h1
        color #333333
        line-height 1
      p
        color color-font
      time
        color #cccccc
        display block
        font-size 0.9em
  article.post-expand
    background color-section
    //-webkit-box-shadow: 2px 2px 3px darken(color-background,20%)
    //box-shadow: 2px 2px 3px darken(color-background,20%)
    //-webkit-border-radius: 3px
    //border-radius: 3px
    padding 20px
    margin-bottom 20px
    padding-bottom 0px
    border 1px solid rgba(0,0,0,.04)
    box-shadow 0 1px 4px rgba(0,0,0,.03)
    border-radius 3px
    header.article-info
      font-size 1em
      h1
        margin 0
        margin-left -1px
        width 80%
        line-height 1.5
        padding 0
        a
          color #333
          &:hover
            color color-theme !important
      .article-time
        float left
        padding-left 0%
    .img-logo
      max-width 180px
      max-height 96px
      display block !important
      margin-right .7em
      margin-left .7em
      padding 0
      float right
      clear right
    .img-topic
      max-width 300px
      max-height 1800px
      display block !important
      margin-left .7em
      margin-right .7em
      padding 0
      float right
      clear right
    blockquote
      display none
    .p 
      font-size 0.9em
    .article-content
      margin-top 0.8em
      padding-bottom 0
      p
        margin-top 0.5em !important
      *
        color #999 !important
    
    .article-more-link
      //margin-top: 1.5em
      //padding-top: 1em
      //border-top: 2px solid #ddd
      margin-top: 1.1%
      margin-bottom: 0.5%
      a
        border: 1px solid #5AC8FA
        display: inline-block
        line-height: 1em
        padding: 6px 15px
        border-radius: 15px
        color color-theme !important
        //text-shadow: 0 1px #fff
        text-decoration: none
        &:hover
          background: color-theme
          color: #fff !important
          text-decoration: none
          //text-shadow: 0 1px darken(color-theme, 20%)
    footer
      border none
      margin-top -4px
#archive-page
  section.post
    background white
    padding 20px
    border 1px solid rgba(0,0,0,.04)
    box-shadow 0 1px 4px rgba(0,0,0,.03)
    a
      font-size 0.8em
      padding 0.5em !important
      display block
      line-height 30px
      height 30px
      time
        float left
        line-height 30px
        padding-right 1em
        @media tablet
          padding-left 1em
          padding-right 0
      h1
        float left
        width 83%
        margin 0
        height 30px
        line-height 30px
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
    @media minimax
      a
        height 40px
        time
          font-size 12px !important
          line-height 15px
        h1
          font-size 16px
          line-height normal
          width 100%
      padding 0

#page-nav
  width 90% !important
  margin-left 5% !important
  @media mini
    width 40% !important
    margin-left 30% !important



.moveMain
  margin-left 10% !important

.unexpand .prev
  border-left 0.5em solid color-gray
  &:hover
    border-left 0.5em solid color-theme

#page-nav
  text-align center
  overflow hidden
  a
    display inline-block
    color #C7C7C7
    &:hover
      color color-theme
  .prev
    float left
    transition border-left .5s
    span:before
      font-family font-icon-family
      font-smoothing()
      content "\f053"
      padding-right 0.5em
  .next
    float right
    span:before
      font-family font-icon-family
      font-smoothing()
      content "\f054"
      padding-left 0.5em
  .page-number
    display none
    padding 0em 0.5em
    @media mini
      display inline-block
  .current
    color darken(color-gray,10%)
    font-weight bold
  .space
    color #C7C7C7

/*! page layout */
.page
  @media tablet
    margin-left 10% !important

/*! archive layout */
.category-icon:before,.tag-icon:before,.archive-icon:before
  font-family font-icon-family
  font-smoothing()
  color color-gray
  font-size font-size
  padding-right 0.3em

.category-icon:before
  content "\f07b"

.tag-icon:before
  content "\f02c"
  
.archive-icon:before
  content "\f187"

.archive-title
  border 1px solid rgba(0,0,0,.04)
  box-shadow 0 1px 4px rgba(0,0,0,.03)
  margin 1em 0
  padding 2em
  @media tablet
    margin 2em 0
    width 13.5%
    padding-left 2.5%
    float left
  background color-section
  h2
    width 90%
    color #ccc
    font-size font-size+20
  a
    color #ccc
    margin-right 2%
    &:hover
      color color-theme
.current
  color color-orange !important

.archive-part
  @media mini
    min-height 200px
  @media tablet
    //width 78% !important
    float right
    margin-left 2% !important
  section.post
    width 100%
    time
      font-size 1.1em !important
      float left
      min-width 90px
      @media phonemax
        width 100%
      @media phone
        width 12%
